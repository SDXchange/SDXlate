<?xml version="1.0" encoding="UTF-8"?>
<project name="application_sdxapp_basicCli" default="compile.application.sdxapp_basicCli">

    <import file="${basedir}/sdx_plugin_api/module_sdx_plugin_api.xml"/>
    <import file="${basedir}/sdx_core/module_sdx_core.xml"/>

    <dirname property="application.sdxapp_basicCli.basedir" file="${ant.file.application_sdxapp_basicCli}"/>


    <property name="compiler.args.sdxapp_basicCli" value="-encoding windows-1252 -source 7 ${compiler.args}"/>

    <property name="sdxapp_basicCli.output.classes.dir" value="${application.sdxapp_basicCli.basedir}/build/classes"/>
    <property name="sdxapp_basicCli.output.jar.dir" value="${application.sdxapp_basicCli.basedir}\build\lib"/>
    <property name="sdxapp_basicCli.testoutput.dir" value="${application.sdxapp_basicCli.basedir}/build/test/classes"/>

    <path id="sdxapp_basicCli.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="sdxapp_basicCli.module.production.classpath">
        <pathelement location="${sdx_plugin_api.output.classes.dir}"/>
        <pathelement location="${sdx_core.output.classes.dir}"/>
    </path>

    <path id="sdxapp_basicCli.runtime.production.module.classpath">
        <pathelement location="${sdxapp_basicCli.output.classes.dir}"/>
    </path>

    <path id="sdxapp_basicCli.module.classpath">
        <pathelement location="${sdxapp_basicCli.output.classes.dir}"/>
    </path>

    <path id="sdxapp_basicCli.runtime.module.classpath">
        <pathelement location="${sdxapp_basicCli.testoutput.dir}"/>
        <pathelement location="${sdxapp_basicCli.output.classes.dir}"/>
    </path>


    <patternset id="excluded.from.application.sdxapp_basicCli">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.sdxapp_basicCli">
        <patternset refid="excluded.from.application.sdxapp_basicCli"/>
    </patternset>

    <path id="sdxapp_basicCli.module.sourcepath">
        <dirset dir="${application.sdxapp_basicCli.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.application.sdxapp_basicCli"
            depends="compile.module.sdx_core, build.modules, compile.module.sdx_plugin_api, compile.application.sdxapp_basicCli.production,compile.application.sdxapp_basicCli.tests"
            description="Compile module sdxapp_basicCli"/>

    <target name="compile.application.sdxapp_basicCli.production"
            description="Compile module sdxapp_basicCli; production classes">
        <mkdir dir="${sdxapp_basicCli.output.classes.dir}"/>
        <mkdir dir="${sdxapp_basicCli.output.jar.dir}"/>
        <javac destdir="${sdxapp_basicCli.output.classes.dir}" debug="${compiler.debug}"
               nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
            <compilerarg line="${compiler.args.sdxapp_basicCli}"/>
            <bootclasspath refid="sdxapp_basicCli.module.bootclasspath"/>
            <classpath refid="sdxapp_basicCli.module.production.classpath"/>
            <src refid="sdxapp_basicCli.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.sdxapp_basicCli"/>
        </javac>

        <copy todir="${sdxapp_basicCli.output.classes.dir}">
            <fileset dir="${application.sdxapp_basicCli.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.application.sdxapp_basicCli.tests" depends="compile.application.sdxapp_basicCli.production"
            description="compile module sdxapp_basicCli; test classes" unless="skip.tests">
        <mkdir dir="${sdxapp_basicCli.output.jar.dir}"/>
        <jar destfile="${sdxapp_basicCli.output.jar.dir}/sdxapp_basicCli.jar"
             basedir="${sdxapp_basicCli.output.classes.dir}">
            <manifest>
                <attribute name="Main-Class" value="org.sdxchange.apps.Main"/>
            </manifest>
        </jar>
        <mkdir dir="${sdxapp_basicCli.output.jar.dir}/plugins"/>

        <copy todir="${sdxapp_basicCli.output.jar.dir}" flatten="true">
            <fileset dir="${application.sdxapp_basicCli.basedir}/scripts/launchers">
                <include name="*.*"/>
            </fileset>
        </copy>

        <copy todir="${sdxapp_basicCli.output.jar.dir}/plugins" flatten="true">
            <fileset dir="${basedir}">
                <include name="**/lib/*.jar"/>
                <exclude name="**/lib/sdxapp*.jar"/>
            </fileset>
        </copy>

        <copy todir="${sdxapp_basicCli.output.jar.dir}" flatten="true">
            <fileset dir="${basedir}">
                <include name="**/lib/sdx_plugin_api.jar"/>
            </fileset>
        </copy>

    </target>

    <target name="clean.application.sdxapp_basicCli" description="cleanup module">
        <delete dir="${sdxapp_basicCli.output.classes.dir}"/>
        <delete dir="${sdxapp_basicCli.output.jar.dir}"/>
        <delete dir="${sdxapp_basicCli.testoutput.dir}"/>
    </target>

    <target name="run.application.sdxapp_basicCli">
        <echo message="${sdxapp_basicCli.output.jar.dir}\*"/>
        <echo message="${sdxapp_basicCli.output.jar.dir}\plugins\*"/>


        <java classname="org.sdxchange.apps.Main">
            <classpath>
                <fileset dir="${sdxapp_basicCli.output.jar.dir}">
                    <include name="**/*.jar"/>
                </fileset>
            </classpath>
        </java>
    </target>
</project>